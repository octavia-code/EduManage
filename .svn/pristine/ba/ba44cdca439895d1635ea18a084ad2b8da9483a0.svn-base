html, body, .layout-body {
    height: 100%;
    width: 100%;
    overflow: hidden;
    margin: 0;
    padding: 0;
}

#wrap {
    height: 83%;
    overflow: auto;
}

.layout {
    width: 100%;
    border: 1px solid #d7dde4;
    background: #f5f7f9;
    position: relative;
    border-radius: 4px;
}

#layout-sider {
    display: inline;
    float: left;
    width: 12%;
    height: 100%;
    background: #515a6e;
    overflow-x: hidden;
    overflow-y: scroll;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
}

.ivu-layout-sider {
    width: 100% !important;
    min-width: 100% !important;
    max-width: 100% !important;
    flex: 100% !important;
}

.layout-main {
    float: right;
    width: 88%;
    height: 100%;
    border: 24px solid #FFF5EE;
    overflow-x: hidden;
    overflow-y: scroll;
}

.layout-logo-img {
    width: 45%;
    height: 64px;
    float: left;
}

.layout-logo-img img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

.layout-logo {
    width: 100px;
    height: 30px;
    background: #5b6270;
    border-radius: 3px;
    float: left;
    position: relative;
    top: 15px;
    left: 20px;
    color: #fff;
    line-height: 30px;
}


.layout-logo2 {
	margin-left: -60px;
    width: 650px;
    height: 40px;
    border-radius: 3px;
    float: left;
    position: relative;
    top: 15px;
    color: #fff;
    line-height: 30px;
    font-size: 30px;
    font-family: "宋体";
}

.layout-nav {
    width: 350px;
    margin: 0 auto;
    margin-right: 20px;
    color: #fff;
}

.nowTime {
    font-size: 12px;
    margin-left: 20px;
}

#layout-sider::-webkit-scrollbar {
    width: 0;
    height: 0;
}

#layout-foot {
    height: 60px;
    background: #262626;
    border-top: 1px solid #d7dde4;
    text-align: center;
}

.footerSpan {
    font: 25px "Microsoft Yahei", "Helvetica Neue";
    line-height: 60px;
    font-weight: 15;
    color: #FFFFFF;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -moz-font-feature-settings: "liga", "kern";
}

.outer-container {
    position: relative;
    overflow: hidden;
}

